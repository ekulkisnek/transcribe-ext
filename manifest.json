{
    "manifest_version": 3,
    "name": "Tab Audio Capture",
    "version": "1.0",
    "permissions": ["desktopCapture", "tabs", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
